{
  "name": "liquiddesign/ares",
  "description": "Ares Integration",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "guzzlehttp/guzzle": "^7.3",
    "guzzlehttp/psr7": "^1.7 || ^2.0",
    "nette/nette": "^3.1"
  },
  "require-dev": {
    "phpstan/phpstan-nette": "^1.0",
    "liquiddesign/codestyle": "^3.0"
  },
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "autoload": {
    "psr-4": {"Ares\\": "src/"}
  },
  "scripts": {
    "fix-code": ["@phpcsfix"],
    "check-code": ["@phpcs", "@phpstan"],
    "phpstan": "phpstan analyse --memory-limit 8G -c phpstan.neon",
    "phpcs": "phpcs -d memory_limit=1G --standard=ruleset.xml --cache --ignore=./src/Client/* ./src",
    "phpcsfix": "phpcbf --standard=ruleset.xml --cache ./src",
    "check-commit": "@php ./vendor/liquiddesign/codestyle/src/scripts/check-last-commit.php"
  },
  "config": {
    "allow-plugins": {
      "symfony/thanks": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
